{
  "name": "web-template",
  "version": "1.0.0",
  "description": "web development.",
  "repository": {
    "type": "git",
    "url": "git@github.com:kajiyan/web-boilerplate.git"
  },
  "author": "Hiroki Kajiya <kajiya.hiroki@gmail.com>",
  "engines": {
    "npm": ">=5",
    "node": ">=8"
  },
  "author": "Hiroki Kajiya",
  "license": "MIT",
  "private": true,
  "scripts": {
    "local:dev:server": "NODE_ENV=development node server",
    "local:dev:template": "NODE_ENV=development node internals/pug",
    "global:dev:template": "NODE_ENV=development node internals/pug --location=global",
    "global:pro:template": "NODE_ENV=production node internals/pug",
    "local:dev:styles": "NODE_ENV=development node internals/postcss",
    "global:dev:styles": "NODE_ENV=development node internals/postcss --location=global",
    "global:pro:styles": "NODE_ENV=production node internals/postcss",
    "lint:staged": "lint-staged",
    "lint:styles": "stylelint \"**/*.pcss\"",
    "lint:styles:fix": "stylelint --fix"
  },
  "lint-staged": {
    "*.pcss": [
      "yarn run lint:styles:fix",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "browser-sync": "^2.26.3",
    "browserslist": "^4.3.4",
    "chalk": "^2.4.1",
    "config": "^2.0.1",
    "cross-env": "^5.2.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.7",
    "doiuse": "^4.2.0",
    "lint-staged": "^8.0.5",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "pixrem": "^4.0.1",
    "pm2": "^3.2.2",
    "postcss": "^7.0.6",
    "postcss-apply": "^0.11.0",
    "postcss-calc": "^7.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-properties": "^8.0.9",
    "postcss-discard-duplicates": "^4.0.2",
    "postcss-easings": "^2.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^4.1.0",
    "postcss-preset-env": "^6.4.0",
    "postcss-reporter": "^6.0.0",
    "postcss-short": "^5.0.0",
    "postcss-simple-vars": "^5.0.1",
    "postcss-sorting": "^4.0.1",
    "pre-commit": "^1.2.2",
    "pug": "^2.0.3",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "not dead"
            ]
          }
        }
      ]
    ]
  }
}
