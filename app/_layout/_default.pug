block CONSTANTS
  -
    PAGE = {};

doctype html
html(id=`js-${config.APP_NS}` class=`${config.APP_NS}` lang='ja')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      meta(name='format-detection', content='telephone=no')
      meta(name='robots', content='all')
      meta(name='description', content='')
      meta(name='keywords', content='')

      meta(property='og:title', content='')
      meta(property='og:description', content='')
      meta(property='og:site_name', content='')
      meta(property='og:locale', content='ja_JP')
      meta(property='og:type', content='website')
      meta(property='og:url', content=`${config.BASE_URL}`)
      meta(property='og:image', content=`${config.BASE_URL}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/ogp-0.png`)

      meta(name='twitter:title', content='')
      meta(name='twitter:description', content='')
      meta(name='twitter:url', content=`${config.BASE_URL}`)
      meta(name='twitter:card', content='summary_large_image')
      meta(name='twitter:image:src', content=`${config.BASE_URL}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/ogp-0.png`)
      meta(name='twitter:site', content='@')

      link(type='text/plain' rel='author' href=`${config.BASE_URL}${config.BASE_PATH}/humans.txt`)
      link(rel='home' href=`${config.BASE_URL}${config.BASE_PATH}`)
      link(rel='apple-touch-icon' href=`${config.BASE_URL}${config.BASE_PATH}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/icon.png`)
      link(rel='icon' type='image/x-icon' href=`${config.BASE_URL}${config.BASE_PATH}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/favicon.ico`)
      link(rel='icon' type='image/png' href=`${config.BASE_URL}${config.BASE_PATH}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/favicon-16x16.png` sizes='16x16')
      link(rel='icon' type='image/png' href=`${config.BASE_URL}${config.BASE_PATH}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/favicon-32x32.png` sizes='32x32')
      link(rel='icon' type='image/png' href=`${config.BASE_URL}${config.BASE_PATH}/${config.ASSETS}/${config.SHARED}/${config.IMAGES}/favicon-96x96.png` sizes='96x96')

      title WebTemplate

      link(rel='stylesheet', href=`/${config.ASSETS}/${config.SHARED}/${config.CSS}/index.css`)
      link(rel='stylesheet', href=`/${config.ASSETS}${PAGE.DIR}/${config.CSS}/index.css`)
      script(src=`/${config.ASSETS}/${config.SHARED}/${config.JS}/vendor.chunk.js` defer)
      script(src=`/${config.ASSETS}/${config.SHARED}/${config.JS}/index.js` defer)
      script(src=`/${config.ASSETS}${PAGE.DIR}/${config.JS}/index.js` defer)

  body(class=`${config.APP_NS}-Body`)
    include ../_template/_modules/_noscript
    include ../_template/_modules/_conditional-comments
    include ../_template/_modules/_header
    block main
    include ../_template/_modules/_footer
