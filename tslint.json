{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*",
      "node_modules/**/*.ts",
      "postcss.config.js",
      "internals/**/*",
      "server/**/*"
    ]
  },
  "rules": {
    "no-console": false,
    "ordered-imports": false,
    "prettier": [
      true,
      ".prettierrc"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ]
}
